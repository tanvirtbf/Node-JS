<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container max-w-6xl p-8 mx-auto mt-10 bg-white rounded-lg shadow-lg">
      <h2 class="mb-6 text-3xl font-bold text-center text-red-500">
        Welcome to airbnb index page:
      </h2>
      <div class="flex flex-wrap justify-center gap-6">
        <% registeredHomes.forEach(home => { %>
          <div class="w-full max-w-sm overflow-hidden transition duration-300 bg-white rounded-lg shadow-md hover:shadow-lg">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="object-cover w-full h-48">
            <div class="p-4">
              <h3 class="mb-2 text-xl font-semibold text-gray-800"><%= home.houseName %></h3>
              <p class="mb-2 text-gray-600"><i class="mr-2 fas fa-map-marker-alt"></i><%= home.location %></p>
              <div class="flex items-center justify-between mb-2">
                <span class="text-lg font-bold text-red-500">Rs<%= home.price %> / night</span>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-1 text-yellow-400">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700"><%= home.rating %></span>
                </div>
              </div>
              <button class="p-2 bg-green-300">Book</button>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>
