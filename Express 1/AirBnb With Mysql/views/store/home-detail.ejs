<%- include('../partials/head') %>
  </head>
  <body>
      <%- include('../partials/nav') %>
      <main class="container max-w-6xl p-8 mx-auto mt-10 bg-white rounded-lg shadow-lg">
          <h2 class="mb-6 text-3xl font-bold text-center text-red-500">
              Details of <%= home.houseName %>
          </h2>
          
          <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
              <div class="overflow-hidden rounded-lg">
                  <img src="<%= home.photoUrl %>" alt="<%= home.name %>" class="object-cover w-full h-96">
              </div>
              
              <div class="space-y-6">
                  <div class="pb-4 border-b">
                      <h3 class="mb-2 text-2xl font-semibold">Description</h3>
                      <p class="text-gray-600"><%= home.description %></p>
                  </div>

                  <div class="pb-4 border-b">
                      <h3 class="mb-2 text-2xl font-semibold">Location</h3>
                      <p class="text-gray-600"><%= home.location %></p>
                  </div>
                  
                  <div class="pb-4 border-b">
                      <h3 class="mb-2 text-2xl font-semibold">Price</h3>
                      <p class="text-xl font-bold text-green-600">$<%= home.price %> / night</p>
                  </div>
                  
                  <div class="pb-4 border-b">
                      <h3 class="mb-2 text-2xl font-semibold">Rating</h3>
                      <div class="flex items-center">
                          <span class="text-xl text-yellow-400">â˜…</span>
                          <span class="ml-2 text-lg"><%= home.rating %> / 5</span>
                      </div>
                  </div>
                  <div class="mt-2">
                    <%- include('../partials/favourite') %>
                  </div>
              </div>
          </div>
      </main>
  </body>
</html>
